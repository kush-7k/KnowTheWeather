      <button onclick="window.location.href='/users/register'">Register</button>
    </nav>
  </header> --}}
  <main class="container">
    <section>
      <h2>Weather Data (Read-Only)</h2>
      <table>
        <thead>
          <tr>
            <th>City</th>
            <th>Temperature</th>
            <th>Condition</th>
          </tr>
        </thead>
        <tbody>
          {{#each weatherData}}
            <tr>
              <td>{{this.city}}</td>
              <td>{{this.temperature}}</td>
              <td>{{this.condition}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </section>

    <!-- Form to enter a new city -->
    <section>
      <h2>Enter a City for Weather Information</h2>
      <form action="/weather" method="GET">
        <label for="city">City:</label>
        <input type="text" id="city" name="city" required>
        <button type="submit">Get Weather</button>
      </form>
    </section>
    <section>
    <img src="https://www.gizmochina.com/wp-content/uploads/2020/01/best-weather-apps-1024x555.jpg" alt="Image">
    </section>
  </main>
  <footer style="background-color: #37474f; color: #fff; text-align: center; padding: 20px;">
    <p style="font-size: 1em;">&copy; 2023 Weather Explorer. All rights reserved.</p>
  </footer>


</body>
</html>
